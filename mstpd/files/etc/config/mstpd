config mstpd 'global'
	option enabled '1'
	option loglevel '1'
	list bridge 'switch'

config bridge 'switch'
	option forcevers 'rstp'
	option treeprio '8'
	option hello '2'
	option fdelay '15'
	option maxage '20'
	option ageing '300'
	option txholdcount '6'

config bridge_port 'lan1'
	option treeprio '8'
	option pathcost '0'
	option adminedge 'no'
	option autoedge 'yes'
	option bpdufilter 'no'
	option bpduguard 'no'

